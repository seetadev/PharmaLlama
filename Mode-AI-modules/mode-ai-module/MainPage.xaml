                                            <PointerUpThemeAnimation Storyboard.TargetName="OverflowContentRoot"/>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="CheckedPressed">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Opacity" Storyboard.TargetName="CheckedHighlightBackground">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="1"/>
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Opacity" Storyboard.TargetName="OverflowCheckGlyph">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="1"/>
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Fill" Storyboard.TargetName="AccentOverlayBackground">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SystemControlHighlightListMediumBrush}"/>
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Foreground" Storyboard.TargetName="Content">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SystemControlHighlightAltBaseHighBrush}"/>
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Foreground" Storyboard.TargetName="OverflowCheckGlyph">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SystemControlHighlightAltBaseHighBrush}"/>
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Foreground" Storyboard.TargetName="OverflowTextLabel">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SystemControlHighlightAltBaseHighBrush}"/>
                                            </ObjectAnimationUsingKeyFrames>
                                            <PointerDownThemeAnimation Storyboard.TargetName="OverflowContentRoot"/>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="CheckedDisabled">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Opacity" Storyboard.TargetName="CheckedHighlightBackground">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="1"/>
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Opacity" Storyboard.TargetName="OverflowCheckGlyph">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="1"/>
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Foreground" Storyboard.TargetName="Content">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SystemControlBackgroundBaseMediumLowBrush}"/>
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Foreground" Storyboard.TargetName="OverflowCheckGlyph">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SystemControlDisabledBaseMediumLowBrush}"/>
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Foreground" Storyboard.TargetName="OverflowTextLabel">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SystemControlDisabledBaseMediumLowBrush}"/>
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                                <VisualStateGroup x:Name="InputModeStates">
                                    <VisualState x:Name="InputModeDefault"/>
                                    <VisualState x:Name="TouchInputMode">
                                        <VisualState.Setters>
                                            <Setter Target="OverflowTextLabel.Padding" Value="0,11,0,13"/>
                                            <Setter Target="OverflowCheckGlyph.Margin" Value="12,12,12,12"/>
                                        </VisualState.Setters>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                            <Rectangle x:Name="CheckedHighlightBackground" Opacity="0">
                                <Rectangle.Fill>
                                    <SolidColorBrush Color="{StaticResource AppAccentColorMedium}"/>
                                </Rectangle.Fill>
                            </Rectangle>
                            <Rectangle x:Name="AccentOverlayBackground"/>
                            <StackPanel x:Name="ContentRoot" MinHeight="{ThemeResource AppBarThemeCompactHeight}">
                                <ContentPresenter x:Name="Content" AutomationProperties.AccessibilityView="Raw" Content="{TemplateBinding Icon}" Foreground="{TemplateBinding Foreground}" HorizontalAlignment="Stretch" Height="20" Margin="0,14,0,4"/>
                                <TextBlock x:Name="TextLabel" FontSize="12" FontFamily="{TemplateBinding FontFamily}" Margin="0,0,0,6" TextAlignment="Center" TextWrapping="Wrap" Text="{TemplateBinding Label}" Foreground="Black">
                                    <TextBlock.SelectionHighlightColor>
                                        <SolidColorBrush Color="{StaticResource AppAccentColorMedium}"/>
                                    </TextBlock.SelectionHighlightColor>
                                </TextBlock>
                            </StackPanel>
                            <Grid x:Name="OverflowContentRoot">
                                <TextBlock x:Name="OverflowCheckGlyph" Foreground="{TemplateBinding Foreground}" FontSize="16" FontFamily="{ThemeResource SymbolThemeFontFamily}" HorizontalAlignment="Left" Height="14" Margin="12,6,12,6" Opacity="0" Text="&#xE73E;" Visibility="Collapsed" VerticalAlignment="Center" Width="14"/>
                                <TextBlock x:Name="OverflowTextLabel" Foreground="{TemplateBinding Foreground}" FontSize="15" FontFamily="{TemplateBinding FontFamily}" HorizontalAlignment="Stretch" Margin="38,0,12,0" Padding="0,5,0,7" TextAlignment="Left" TextWrapping="NoWrap" Text="{TemplateBinding Label}" TextTrimming="Clip" Visibility="Collapsed" VerticalAlignment="Center"/>
                            </Grid>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.Background>
            <SolidColorBrush Color="{StaticResource PanelBackgroundExtraLight}"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="SideBar_ColDef" Width="3.5*" MinWidth="325" MaxWidth="450"/>
            <ColumnDefinition x:Name="Workspace_ColDef" Width="7*"/>
        </Grid.ColumnDefinitions>
        <Grid x:Name="FileList" MaxWidth="450"  Grid.Row="0" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="9*"/>
                <RowDefinition Height="6*"/>
            </Grid.RowDefinitions>
            <ListView x:Name="LocalListView" Margin="5,5,5,109" CanDragItems="True" DragItemsStarting="ListView_DragStarting" DragItemsCompleted="LocalListView_DragItemsCompleted" SelectionChanged="LocalListView_SelectionChanged" SelectionMode="Single" Visibility="Visible" ItemContainerStyle="{StaticResource FileListViewItemStyle}" Grid.RowSpan="2" ItemTemplate="{StaticResource ReadItemTemplate}" Loaded="LocalListView_Loaded" LayoutUpdated="LocalListView_LayoutUpdated">
                <ListView.RenderTransform>
                    <CompositeTransform/>
                </ListView.RenderTransform>
            </ListView>
            <StackPanel x:Name="FileReception" Grid.Row="1" Margin="0,2,0,0" Padding="0" VerticalAlignment="Bottom">
                <StackPanel.RenderTransform>
                    <CompositeTransform/>
                </StackPanel.RenderTransform>
                <StackPanel.Background>
                    <SolidColorBrush Color="{StaticResource PanelBackgroundDark}"/>
                </StackPanel.Background>
                <StackPanel>
                    <StackPanel Padding="1" >
                        <AutoSuggestBox x:Name="SuggestBox" PlaceholderText="Search your files" TextChanged="AutoSuggestBox_TextChanged" QuerySubmitted="AutoSuggestBox_QuerySubmitted" SuggestionChosen="AutoSuggestBox_SuggestionChosen" Margin="0" VerticalAlignment="Center" Style="{StaticResource AutoSuggestBoxStyle}" QueryIcon="Find">
                            <AutoSuggestBox.Foreground>
                                <SolidColorBrush Color="{StaticResource TextColorWhite}"/>
                            </AutoSuggestBox.Foreground>
                        </AutoSuggestBox>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,5">
                        <Button x:Name="LoadAll" Content="&#xe72c;" Tapped="LoadAll_Tapped" FontFamily="Segoe MDL2 Assets" Style="{StaticResource DarkButtonStyle}" FontSize="18.667">
                            <Button.Foreground>
                                <SolidColorBrush Color="{StaticResource PanelBackgroundLight}"/>
                            </Button.Foreground>
                        </Button>
                        <ToggleButton x:Name="MultiSelectBtn" Content="&#xe133;" FontFamily="Segoe MDL2 Assets" Style="{StaticResource ToggleButtonStyle}" FontSize="18.667" Checked="MultiSelectBtn_Checked" Unchecked="MultiSelectBtn_Unchecked"/>
                        <ComboBox x:Name="Sort_ComboBox" SelectedIndex="5" PlaceholderText="SORT BY" Style="{StaticResource ComboBoxStyle_Sort}" FontSize="12" FontFamily="Segoe UI Symbol" SelectionChanged="Sort_ComboBox_SelectionChanged" Width="95">
                            <ComboBox.Foreground>
                                <SolidColorBrush Color="{StaticResource TextColorWhite}"/>
                            </ComboBox.Foreground>
                            <ComboBoxItem FontFamily="Segoe UI" FontSize="12">Name Asc.</ComboBoxItem>
                            <ComboBoxItem FontFamily="Segoe UI" FontSize="12">Name Desc.</ComboBoxItem>
                            <ComboBoxItem FontFamily="Segoe UI" FontSize="12">Size Asc.</ComboBoxItem>
                            <ComboBoxItem FontFamily="Segoe UI" FontSize="12">Size Desc.</ComboBoxItem>
                            <ComboBoxItem FontFamily="Segoe UI" FontSize="12">Oldest</ComboBoxItem>
                            <ComboBoxItem FontFamily="Segoe UI">Latest</ComboBoxItem>
                        </ComboBox>
                        <ComboBox x:Name="Filter_ComboBox" PlaceholderText="FILTER" Style="{StaticResource ComboBoxStyle_Filter}" FontSize="12" FontFamily="Segoe UI Emoji" SelectionChanged="Filter_ComboBox_SelectionChanged" Width="85">
                            <ComboBox.Foreground>
                                <SolidColorBrush Color="{StaticResource TextColorWhite}"/>
                            </ComboBox.Foreground>
                            <ComboBoxItem FontFamily="Segoe UI" FontSize="12" Content="None"></ComboBoxItem>
                            <ComboBoxItem FontFamily="Segoe UI" FontSize="12" Content="HTML"></ComboBoxItem>
                            <ComboBoxItem FontFamily="Segoe UI" FontSize="12"  Content="PDF"></ComboBoxItem>
                            <ComboBoxItem FontFamily="Segoe UI" FontSize="12" Content="CSV"></ComboBoxItem>
                            <ComboBoxItem FontFamily="Segoe UI" FontSize="12" Content="TXT"></ComboBoxItem>
                            <ComboBoxItem FontFamily="Segoe UI" FontSize="12" Content="JPG"></ComboBoxItem>
                            <ComboBoxItem FontFamily="Segoe UI" FontSize="12" Content="PNG"></ComboBoxItem>
                            <ComboBoxItem FontFamily="Segoe UI" FontSize="12" Content="Unread"></ComboBoxItem>
                        </ComboBox>
                        <Rectangle Width="1" Margin="10,0,0,0" Opacity="0.5">
                            <Rectangle.Fill>
                                <SolidColorBrush Color="{StaticResource PanelBackgroundLight}"/>
                            </Rectangle.Fill>
                        </Rectangle>
                        <ToggleButton x:Name="ShowIpInfoBtn" Content="&#xe952;" FontFamily="Segoe MDL2 Assets" Style="{StaticResource ToggleButtonStyle}" FontSize="18.667" Checked="ShowIpInfoBtn_Checked" Unchecked="ShowIpInfoBtn_Unchecked" Margin="0"/>
                    </StackPanel>
                    <StackPanel x:Name="BottomPanel" Height="0" Margin="1,20,0.2,0" VerticalAlignment="Center">
                        <StackPanel.Background>
                            <SolidColorBrush Color="{StaticResource AppAccentColorMedium}"/>
                        </StackPanel.Background>
                        <StackPanel Height="2">
                            <StackPanel.Background>
                                <SolidColorBrush Color="{StaticResource AppAccentColorDark}"/>
                            </StackPanel.Background>
                        </StackPanel>
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="0,10,0,0">
                            <TextBlock x:Name="FileReceptionIndicator" HorizontalAlignment="Center" VerticalAlignment="Bottom" FontSize="14.667" Margin="0,0,0,10">
                                <TextBlock.Foreground>
                                    <SolidColorBrush Color="{StaticResource PanelBackgroundLight}"/>
                                </TextBlock.Foreground>
					            <Run x:Name="FileReception_Name" Text="" FontWeight="Bold"/>
                                <Run x:Name="FileReception_Status" Text="No activity"/>
                            </TextBlock>
                            <StackPanel Name="ProgressBarPanel" Height="0" HorizontalAlignment="Center">
                                <ProgressBar Name="FileReceptionBar" Value="0"  Width="250">
                                    <ProgressBar.Foreground>
                                        <SolidColorBrush Color="{StaticResource TextColorWhite}"/>
                                    </ProgressBar.Foreground>
                                </ProgressBar>
                                <TextBlock HorizontalAlignment="Center" FontSize="12" FontWeight="Bold">
                                    <TextBlock.Foreground>
                                        <SolidColorBrush Color="{StaticResource PanelBackgroundLight}"/>
                                    </TextBlock.Foreground>
                                    <Run>FROM</Run>
                                    <Run x:Name="ProgressPanel_RemoteHost"></Run>
                                </TextBlock>
                            </StackPanel>
                        </StackPanel>
                        <StackPanel Name="IpInfoPanel" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,15,0,0" HorizontalAlignment="Center">
                            <TextBlock Text="&#xec15;" FontFamily="Segoe MDL2 Assets" FontSize="21.333" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5">
                                <TextBlock.Foreground>
                                    <SolidColorBrush Color="{StaticResource TextColorWhite}"/>
                                </TextBlock.Foreground>
                                <TextBlock.SelectionHighlightColor>
                                    <SolidColorBrush Color="{StaticResource AppAccentColorLight}"/>
                                </TextBlock.SelectionHighlightColor>
                            </TextBlock>
                            <TextBlock x:Name="IPInfo" Text="IP Information" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5" FontSize="14.667">
                                <TextBlock.Foreground>
                                    <SolidColorBrush Color="{StaticResource TextColorWhite}"/>
                                </TextBlock.Foreground>
                            </TextBlock>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Grid>

        <Grid x:Name="WorkspaceGrid" Grid.Row="0" Grid.Column="1">
            <Grid.RenderTransform>
                <CompositeTransform/>
            </Grid.RenderTransform>
            <StackPanel x:Name="DragPanel" Canvas.ZIndex="-1" Background="Transparent" Opacity="0"  AllowDrop="True" DragOver="WorkspacePivot_DragOver" Drop="WorkspacePivot_Drop" RenderTransformOrigin="0.5,0.5">
                <StackPanel.RenderTransform>
                    <CompositeTransform/>
                </StackPanel.RenderTransform>
                <StackPanel Width="350" Margin="0,100,0,0" Height="120" VerticalAlignment="Center">
                    <StackPanel.Background>
                        <SolidColorBrush Color="{StaticResource AppAccentColorLight}"/>
                    </StackPanel.Background>
                    <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,20,0,0" RenderTransformOrigin="0.5,0.5">
                        <TextBlock.Foreground>
                            <SolidColorBrush Color="{StaticResource TextColorWhite}"/>
                        </TextBlock.Foreground>
                        <TextBlock.RenderTransform>
                            <CompositeTransform Rotation="180"/>
                        </TextBlock.RenderTransform>
                		<Run Text="" FontFamily="Segoe MDL2 Assets" FontSize="32"/>
                    </TextBlock>
                    <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,20,0,0" FontFamily="Segoe UI Semibold" FontWeight="Bold" FontSize="13.333">
                		<Run Text="DRAG HERE FOR NEW TAB">
                			<Run.Foreground>
                				<SolidColorBrush Color="{StaticResource PanelBackgroundExtraLight}"/>
                			</Run.Foreground>
                		</Run>
                    </TextBlock>
                </StackPanel>
            </StackPanel>
            <Pivot x:Name="WorkspacePivot" SelectionChanged="WorkspacePivot_SelectionChanged">
                <Pivot.RenderTransform>
                    <CompositeTransform />
                </Pivot.RenderTransform>
            </Pivot>
            <CommandBar x:Name="FileCommandBar" VerticalAlignment="Bottom" Opening="FileCommandBar_Opening" Closed="FileCommandBar_Closed" >
                <CommandBar.Content>
                    <AppBarToggleButton x:Name="Collapse" Label="" VerticalAlignment="Top" Icon="DockLeft" Checked="Collapse_Checked" Unchecked="Collapse_Unchecked" Click="Collapse_Click" Style="{StaticResource CollapseButtonStyle}"/>
                </CommandBar.Content>
                <AppBarButton x:Name="OpenFileBtn" Label="Open file" VerticalAlignment="Top" Icon="OpenFile" Click="OpenFileBtn_Click"/>
                <AppBarButton x:Name="ShareMailBtn" Label="Share" VerticalAlignment="Top"  Click="ShareMailBtn_Click">
                    <AppBarButton.Icon>
                        <FontIcon Glyph="&#xE72D;"/>
                    </AppBarButton.Icon>
                </AppBarButton>
                <AppBarButton x:Name="SaveToDeviceBtn" Label="Save to Device" VerticalAlignment="Top" Icon="SaveLocal" Click="SaveToDeviceBtn_Click"/>
                <AppBarButton x:Name="DeleteBtn" Label="Delete" Icon="Delete" VerticalAlignment="Top" Tapped="DeleteBtn_Tapped" Margin="0,0,50,0"/>
                <AppBarButton x:Name="NewTabBtn" Label="New Tab" VerticalAlignment="Top" Icon="Add" Tapped="NewTabBtn_Tapped_1"/>
                <AppBarButton x:Name="CloseTabBtn" Label="Close Tab" VerticalAlignment="Top" Icon="Cancel" Tapped="CloseTabBtn_Tapped"/>
                <CommandBar.SecondaryCommands>
                    <AppBarButton x:Name="OpenFileBtn_2" Label="Open file" VerticalAlignment="Top" Icon="OpenFile" Visibility="Collapsed" Click="OpenFileBtn_Click"/>
                    <AppBarButton x:Name="ShareMailBtn_2" Label="Share" VerticalAlignment="Top"  Visibility="Collapsed"  Click="ShareMailBtn_Click"/>
                    <AppBarButton x:Name="SaveToDeviceBtn_2" Label="Save to Device" VerticalAlignment="Top" Icon="SaveLocal" Visibility="Collapsed"  Click="SaveToDeviceBtn_Click"/>
                    <AppBarButton x:Name="DeleteBtn_2" Label="Delete" Icon="Delete" VerticalAlignment="Top" Visibility="Collapsed"  Tapped="DeleteBtn_Tapped" Margin="0,0,50,0"/>
                    <AppBarButton x:Name="NewTabBtn_2" Label="New Tab" VerticalAlignment="Top" Icon="Add" Visibility="Collapsed"  Tapped="NewTabBtn_Tapped_1"/>
                    <AppBarButton x:Name="CloseTabBtn_2" Label="Close Tab" VerticalAlignment="Top" Icon="Cancel" Visibility="Collapsed"  Tapped="CloseTabBtn_Tapped"/>
                </CommandBar.SecondaryCommands>
            </CommandBar>
        </Grid>
    </Grid>
</Page>

    